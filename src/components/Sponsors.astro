---
import { Radar, type LucideProps } from "lucide-react";

interface SponsorProps {
  icon: React.ForwardRefExoticComponent<Omit<LucideProps, "ref"> & React.RefAttributes<SVGSVGElement>>;
  name: string;
}

const sponsors: SponsorProps[] = [
  {
    icon: Radar,
    name: "Sponsor 1",
  },
  {
    icon: Radar,
    name: "Sponsor 2",
  },
  {
    icon: Radar,
    name: "Sponsor 3",
  },
  {
    icon: Radar,
    name: "Sponsor 4",
  },
  {
    icon: Radar,
    name: "Sponsor 5",
  },
  {
    icon: Radar,
    name: "Sponsor 6",
  },
];
---

<section
  id="sponsors"
  class="container pt-24 sm:py-32"
>
  <h2 class="text-center text-md lg:text-xl font-bold mb-8 text-primary">
    Investors and founders
  </h2>

  <div class="flex flex-wrap justify-center items-center gap-4 md:gap-8">
    {sponsors.map(({ icon: Icon, name }: SponsorProps) => (
      <div
        class="flex items-center gap-1 text-muted-foreground/60"
      >
        <span><Icon size={34} /></span>
        <h3 class="text-xl  font-bold">{name}</h3>
      </div>
    ))}
  </div>
</section>

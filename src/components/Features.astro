---
import Badge from "./ui/Badge.astro";
import Card from "./ui/card/Card.astro";
import CardHeader from "./ui/card/CardHeader.astro";
import CardTitle from "./ui/card/CardTitle.astro";
import CardContent from "./ui/card/CardContent.astro";
import CardFooter from "./ui/card/CardFooter.astro";
import image from "../assets/growth.png";
import image3 from "../assets/reflecting.png";
import image4 from "../assets/looking-ahead.png";

interface FeatureProps {
  title: string;
  description: string;
  image: string;
}

const features: FeatureProps[] = [
  {
    title: "Responsive Design",
    description:
      "Lorem ipsum dolor sit amet consectetur adipisicing elit. Nisi nesciunt est nostrum omnis ab sapiente.",
    image: image4.src,
  },
  {
    title: "Intuitive user interface",
    description:
      "Lorem ipsum dolor sit amet consectetur adipisicing elit. Nisi nesciunt est nostrum omnis ab sapiente.",
    image: image3.src,
  },
  {
    title: "AI-Powered insights",
    description:
      "Lorem ipsum dolor sit amet consectetur adipisicing elit. Nisi nesciunt est nostrum omnis ab sapiente.",
    image: image.src,
  },
];

const featureList: string[] = [
  "Dark/Light theme",
  "Reviews",
  "Features",
  "Pricing",
  "Contact form",
  "Our team",
  "Responsive design",
  "Newsletter",
  "Minimalist",
];
---

<section
  id="features"
  class="container py-24 sm:py-32 space-y-8"
>
  <h2 class="text-3xl lg:text-4xl font-bold md:text-center">
    Many{" "}
    <span class="bg-linear-to-b from-primary/60 to-primary text-transparent bg-clip-text">
      Great Features
    </span>
  </h2>

  <div class="flex flex-wrap md:justify-center gap-4">
    {featureList.map((feature: string) => (
      <div>
        <Badge
          variant="secondary"
          class="text-sm"
        >
          {feature}
        </Badge>
      </div>
    ))}
  </div>

  <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
    {features.map(({ title, description, image }: FeatureProps) => (
      <Card>
        <CardHeader>
          <CardTitle>{title}</CardTitle>
        </CardHeader>

        <CardContent>{description}</CardContent>

        <CardFooter>
          <img
            src={image}
            alt="About feature"
            class="w-[200px] lg:w-[300px] mx-auto"
          />
        </CardFooter>
      </Card>
    ))}
  </div>
</section>

---
import type { HTMLAttributes } from "astro/types";
import { cn } from "@/lib/utils"

type Props = HTMLAttributes<"h3">;

const { class: className, ...props } = Astro.props
---

<h3
  class={cn(
    "text-2xl font-semibold leading-none tracking-tight",
    className
  )}
  {...props}
>
  <slot />
</h3>

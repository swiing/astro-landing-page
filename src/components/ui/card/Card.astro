---
import type { HTMLAttributes } from "astro/types";
import { cn } from "@/lib/utils"

type Props = HTMLAttributes<"div">;

const { class: className, ...props } = Astro.props
---

<div
  class={cn(
    "rounded-lg border bg-card text-card-foreground shadow-xs",
    className
  )}
  {...props}
>
  <slot />
</div>
